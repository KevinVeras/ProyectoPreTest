<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar mascota"
        android:textSize="25dp"
        android:gravity="center"
        android:fontFamily="@font/gloria"
        android:textColor="#009688"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/perrocar"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/nombremascotaEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NombreM"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#151515"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/vRabiaEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rabia" />

            <CheckBox
                android:id="@+id/vDistemperedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distemper" />

            <CheckBox
                android:id="@+id/vParvovirusEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parvovirus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vacunas Puestas"
                android:textSize="20dp"
                android:textColor="#151515"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/vRabiaME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/vDistemperME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/vParvovirusME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />




        </LinearLayout>





    </LinearLayout>

    <Button
        android:id="@+id/btnatras"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/black"
        android:background="@drawable/rounded"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnactualizar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/black"
        android:background="@drawable/rounded"
        android:layout_gravity="center"/>





</LinearLayout>