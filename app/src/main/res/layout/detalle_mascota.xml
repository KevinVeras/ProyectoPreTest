<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle mascota"
        android:textSize="25dp"
        android:gravity="center"
        android:fontFamily="@font/gloria"
        android:textColor="#009688"
       />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/perrocar"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/nombremascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NombreM"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#151515"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#151515"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/edadmascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="edad"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="20dp"
                android:textColor="#151515"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/tipomascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="caninio"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vacunas Puestas"
                android:textSize="20dp"
                android:textColor="#151515"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/vRabiaM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/vDistemperM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/vParvovirusM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />




        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Peso ideal segun su edad"
                android:textColor="#151515"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/p"
                        android:layout_width="95dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:src="@drawable/perromini" />

                    <TextView
                        android:id="@+id/mx"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/p"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Mini"
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/miniM"
                        android:layout_width="85dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/mx"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="mini" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:id="@+id/pp"
                        android:layout_width="95dp"
                        android:layout_height="90dp"
                        android:src="@drawable/perromediano" />

                    <TextView
                        android:id="@+id/mxx"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/pp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Mediano"
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/medianoM"
                        android:layout_width="85dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/mxx"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="mini"
                        android:textSize="18dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ppp"
                        android:layout_width="95dp"
                        android:layout_height="90dp"
                        android:src="@drawable/perrogigant" />

                    <TextView
                        android:id="@+id/mxxxx"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/ppp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Grande"
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/grandeM"
                        android:layout_width="85dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/mxxxx"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="mini"
                        android:textSize="18dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pppp"
                        android:layout_width="95dp"
                        android:layout_height="90dp"
                        android:src="@drawable/perrogrand" />

                    <TextView
                        android:id="@+id/mxxx"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/pppp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Gigante"
                        android:textColor="#151515" />

                    <TextView
                        android:id="@+id/giganteM"
                        android:layout_width="85dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/mxxx"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="mini"
                        android:textSize="18dp" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>