<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dispensador Modo Programable"
        android:textSize="25dp"
        android:gravity="center"
        android:fontFamily="@font/gloria"
        android:textColor="#009688"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/dispen"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Horario 1"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/lobster"
        android:gravity="center"

        android:drawablePadding="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_timer1"
        android:hint="Seleccione Hora"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"

        android:textColor="@color/teal_200"
        android:drawablePadding="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Horario 2"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/lobster"
        android:gravity="center"

        android:drawablePadding="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_timer2"
        android:hint="Seleccione Hora"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/teal_200"

        android:drawablePadding="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Horario 3"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/lobster"
        android:gravity="center"

        android:drawablePadding="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_timer3"
        android:hint="Seleccione Hora"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/teal_200"

        android:drawablePadding="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Horario 4"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/lobster"
        android:gravity="center"

        android:drawablePadding="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_timer4"
        android:hint="Seleccione Hora"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:gravity="center"

        android:drawablePadding="16dp"/>



    <Button
        android:id="@+id/btnModConfigura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:background="@drawable/rounded"
        android:layout_gravity="center"/>




</LinearLayout>